body
  margin: 0
  padding: 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  
a
  color: #00B7FF
  
img
  max-width: 100%
  
.btn
  -webkit-border-radius: 7
  -moz-border-radius: 7
  border-radius: 7px
  color: #ffffff
  font-size: 12px
  background: #787674
  padding: 4px 12px 4px 12px
  text-decoration: none
  &:hover
    background: #989694
    text-decoration: none

.logo
  width: 170px
  height: 50px
  display: inline
  
.header
  background-color: #171A21
  color: #B8B6B4
  padding: 4px 240px 0px 240px
  
.profile
  float: right
  line-height: 50px
  
.main-content
  padding: 8px 240px 8px 240px

.cards
  max-height: 675px;
  padding-left: 80px
  overflow-y: scroll
  
.card:last-child
  margin-bottom: 85px
  
.card
  margin-top: 80px
  margin-bottom: 20px
  width: 100%
  display: inline-block

.card-information
  float: left
  height: 310px
  background-color: #D8D6D4
  
.card-image
  float: left
  width: 223px
  height: 310px
  border-radius: 15px
  margin-right: 100px
  
  
.card-image img
  -webkit-transition: all .25s ease
	-moz-transition: all .25s ease
	-o-transition: all .25s ease
	-ms-transition: all .25s ease
	transition: all .25s ease
	border-radius: 15px

.card-image:hover img
  -webkit-transform: scale(1.5)
  -moz-transform: scale(1.5)
  -ms-transform: scale(1.5)
  -o-transform: scale(1.5)
  transform: scale(1.5)
  border-radius: 15px

.error
  color: #ff7a7a
  font-weight: bold
  
input:-webkit-autofill
  -webkit-box-shadow: 0 0 0 1000px white inset;

