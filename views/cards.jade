extends layout

block content
  h1 #{title}

  div(ng-controller='HomeController as home')
    h3 Cards
    
    include ./pagination.jade
    
    hr
    
    // cards
    div(style='min-height: 600px;')
      div(ng-repeat='card in cards[page - 1] track by card.id' style='float:left; margin-right:7px;')
        p {{card.name}}
        img(src='http://api.mtgdb.info/content/card_images/{{card.id}}.jpeg')
        p  

    hr(style='clear: both;')

    include ./pagination.jade
