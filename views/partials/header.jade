
#header(ng-controller='SessionController')

  img#logo.pointer(src='images/ms-logo.png' ng-click='navigate("home")')
  
  #session-area
    img.icon.glow(ng-hide='signedIn' ng-click='showModal("UserForm")' ng-src='{{ "/images/icons/signin.png" }}' alt='Entrar') 
    
    #profile-link(ng-click='navigate("profile")')
      img.avatar-thumb(ng-show='avatar' ng-src='{{ avatar ? avatar : "/images/avatars/null.png" }}')
      strong(ng-show='signedIn') {{ username.truncate(12) }}

    img.icon(ng-click='showModal("ShoppingCart")' ng-src='{{ "/images/icons/cart.png" }}' alt='Carrinho de compras')
    
    img.icon(ng-show='signedIn' ng-click='closeSession()' ng-src='{{ "/images/icons/signout.png" }}' alt='Sair')
    

  include ./user-form.jade 
  include ./shopping-cart.jade 
